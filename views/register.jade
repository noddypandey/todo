extends base

block vars
  - var title = 'Register'

block body
    .container
        .well
            h1 Create an Account
        .row
            .col-lg-6
                form(method="post")
                    input(type="hidden", name="_csrf", value=csrfToken)
                    .form-group
                        label(for='firstName' class='col-lg-2 control-label') First Name:
                        input(type="text", name="firstName", required=true class='form-control')
                        br
                    .form-group
                        label(for='lastName' class='col-lg-2 control-label') Last Name:
                        input(type="text", name="lastName", required=true class='form-control')
                        br
                    .form-group
                        label(for='email' class='col-lg-2 control-label') Email:
                        input(type="email", name="email", required=true class='form-control')
                        br
                    .form-group
                        label(for='password' class='col-lg-2 control-label') Password:
                        input(type="password", name="password", required=true class='form-control')
                        br
                    input(type="submit" class='btn btn-default' value='submit')
                    <a href="/login" class='btn btn-primary'>login</a>
